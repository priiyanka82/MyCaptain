//program in C to check a number is a prime number or not using recursion
#include<stdio.h>
int prime(int n,int i);
int main()
{
    int n,p;
    printf("Enter any number :");
    scanf("%d",&n);
    p=prime(n,n/2);
    printf("\n");
    if (p==1)
    {
        printf("Entered Number is Prime.");
    }
    else 
    {
        printf("Entered Number is not prime.");
    }
    return 0;
}
int prime(int n, int i)
{
    if (i==1)
    {
        return 1;
    }
    else if (n%i==0)
    {
        return 0;
    }
    else
    {
        prime(n,i-1);
    }
}
