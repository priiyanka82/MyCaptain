//program in C to find the sum of digits of a number using recursion
#include<stdio.h>
int sum(int n);
int main()
{
  int n,s;
  printf("Enter a number :");
  scanf("%d",&n);
  s=sum(n);
  printf("\nThe sum of the digits are :%d",s);
  return 0;
}
int sum(int n)
{
  int m=n%10;
  if(n==0)
  {
    return 0;
   
  }
  else
  {
    return (m+sum(n/10));
  }
}
